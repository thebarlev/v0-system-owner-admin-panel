            },
            "titleAndNumber": {
              "wrapper": "receipt-title-and-number",
              "title": "receipt-title-text",
              "number": "receipt-number",
              "description": "כותרת 'קבלה' ומספר סידורי באותה שורה"
            },
            "copyText": {
              "wrapper": "receipt-copy-text",
